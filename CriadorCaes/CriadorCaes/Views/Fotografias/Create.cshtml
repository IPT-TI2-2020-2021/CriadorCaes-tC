@model CriadorCaes.Models.Fotografias
@* a View recebe UM objeto do tipo 'Fotografias' *@

@{
   ViewData["Title"] = "Adicionar";
}

<h1>Adicionar nova fotografia</h1>

<hr />
<div class="row">
   <div class="col-md-4">

      <form asp-action="Create" method="post" enctype="multipart/form-data">

         @* esta DIV irá apresentar msgs de erro assoaciadas ao Model *@
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="form-group">
            <label asp-for="Fotografia" class="control-label"></label>
            @* <input asp-for="Fotografia" class="form-control" /> *@
            <input type="file" name="fotoCao" accept=".png,.jpg,.jpeg"  style="color:blue;"   />
            <span asp-validation-for="Fotografia" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="DataFoto" class="control-label"></label>
            <input type="date" asp-for="DataFoto" class="form-control" />
            <span asp-validation-for="DataFoto" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Local" class="control-label"></label>
            <input asp-for="Local" class="form-control" />
            <span asp-validation-for="Local" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="CaoFK" class="control-label"></label>
            <select asp-for="CaoFK"
                    class="form-control"
                    asp-items="ViewBag.CaoFK">
               <option value="">Selecione um cão, por favor</option>
            </select>
            <span asp-validation-for="CaoFK" class="text-danger"></span>
         </div>

         <div class="form-group">
            <input type="submit" value="Adicionar" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

<div>
   <a asp-action="Index">Regressar à listagem</a>
</div>

@section Scripts {
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
